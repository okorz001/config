# ~/.colordiffrc
# vim:ft=conf:

# Suppress colordiff about info.
banner=no

# Don't output color when redirected to a file.
color_patches=no

# Mimic the git diff scheme.
plain=none
oldtext=darkred
newtext=darkgreen

# Hunk and context.
diffstuff=darkcyan

# The diff command header. This is what git calls "meta".
cvsstuff=white
