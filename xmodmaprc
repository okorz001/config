! ~/.xmodmaprc
! vim:ft=xmodmap:

! Remove the Caps Lock key from the Lock modifier.
remove Lock = Caps_Lock

! Remap the Caps Lock key to the left Control key.
! We need to remove and re-add Control_L to the modifier for this to work.
remove Control = Control_L
keysym Caps_Lock = Control_L
add Control = Control_L
